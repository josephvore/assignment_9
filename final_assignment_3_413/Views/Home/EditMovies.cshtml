@ViewData["Title"] = "Edit a Movie";}
@model MoviesViewModel;

<div class="container">
    <form class="mt-5 ml-5 pt-5 pl-5" asp-action="UpdateMovies" method="post">
        <div class="form-group">
            <label asp-for="NewMovieModel.Title">Title</label>
            <input class="form-control" asp-for="NewMovieModel.Title" />
            <span asp-validation-for="NewMovieModel.Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Category">Category</label>
            <input class="form-control" asp-for="NewMovieModel.Category" />
            <span asp-validation-for="NewMovieModel.Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Year">Year</label>
            <input class="form-control" asp-for="NewMovieModel.Year" />
            <span asp-validation-for="NewMovieModel.Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Director">Director</label>
            <input class="form-control" asp-for="NewMovieModel.Director" />
            <span asp-validation-for="NewMovieModel.Director" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Rating">Rating</label>
            <select class="form-select" asp-for="NewMovieModel.Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
            <span class="text-danger" asp-validation-for="NewMovieModel.Rating"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.LentTo">Lent To</label>
            <input class="form-control" asp-for="NewMovieModel.LentTo" />
            <span asp-validation-for="NewMovieModel.LentTo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Edited">Edited?</label>
            <input class="" asp-for="NewMovieModel.Edited" />
        </div>
        <div class="form-group">
            <label asp-for="NewMovieModel.Notes">Notes</label>
            <input class="form-control" asp-for="NewMovieModel.Notes" />
            <span asp-validation-for="NewMovieModel.Notes" class="text-danger"></span>
        </div>

        <input class="btn btn-primary "type="submit">
        
    </form>
</div>