@{
    ViewData["Title"] = "New Movie";
}

@model final_assignment_3_413.Models.NewMovie

<h1>@ViewData["Title"]</h1>


<body>

    <!--Form for entering in a new movier-->
    <div class="container">
        <form class="m-5 p-5 border rounded bg-light" asp-action="NewMovie" method="post" id="newMovieForm">
            <div class="form-group my-2">
                <label asp-for="Title">Title</label>
                <input class="form-control" asp-for="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-4 my-2">
                    <label asp-for="Category">Category</label>
                    <input class="form-control" asp-for="Category" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-2">
                    <label asp-for="Year">Year</label>
                    <input class="form-control" asp-for="Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group col-4 my-2">
                    <label asp-for="Director">Director</label>
                    <input class="form-control" asp-for="Director" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6 my-2">
                    <label asp-for="Rating">Rating</label>
                    <select class="form-select" asp-for="Rating">
                        <option value="">Select One</option>
                        <option value="G">G</option>
                        <option value="PG">PG</option>
                        <option value="PG-13">PG-13</option>
                        <option value="R">R</option>
                    </select>
                    <span class="text-danger" asp-validation-for="Rating"></span>
                </div>
                <div class="form-check col-6 my-2">
                    <label asp-for="Edited">Edited?</label>
                    <input class="" asp-for="Edited" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-6 my-2">
                    <label asp-for="LentTo">Lent To</label>
                    <input class="form-control" asp-for="LentTo" />
                    <span asp-validation-for="LentTo" class="text-danger"></span>
                </div>

                <div class="form-group col-6 my-2">
                    <label asp-for="Notes">Notes</label>
                    <input class="form-control" asp-for="Notes" />
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
            </div>
            <input class="mt-2" type="submit" value="Submit" id="btnsubmit" name="btnsubmit" onclick="resetForm()">
            <input asp-action="ListMovies" type="submit" value="See All Movies" />
        </form>
    </div>

</body>